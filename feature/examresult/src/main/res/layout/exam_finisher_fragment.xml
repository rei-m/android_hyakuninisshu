<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.ExamStarterFragment">

    <data>

        <variable
            name="viewModel"
            type="me.rei_m.hyakuninisshu.feature.examresult.ui.ExamFinisherViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/root_exam_finisher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tatami">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleX="2"
            android:scaleY="2"
            app:visibleOrGone="@{viewModel.isVisibleProgress}" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_finish_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_2"
            android:background="@color/whitePaper"
            android:padding="@dimen/spacing_1"
            android:text="@string/text_finisher_error"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/design_default_color_error"
            android:textSize="@dimen/text_l"
            app:visibleOrGone="@{viewModel.isFailure}" />

    </FrameLayout>
</layout>
