<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="exam"
            type="me.rei_m.hyakuninisshu.domain.model.quiz.KarutaExam" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        <TextView-->
        <!--            android:id="@+id/text_training_score_title"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:padding="@dimen/padding_m"-->
        <!--            android:text="@string/number_of_correct_answers"-->
        <!--            android:textAppearance="?attr/textAppearanceHeadline6"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent" />-->

        <TextView
            android:id="@+id/text_number_of_correct"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_line"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_m"
            android:paddingEnd="@dimen/padding_m"
            android:text="@{exam.result.score}"
            android:textAppearance="?attr/textAppearanceBody1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/average_response_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="21/100" />

        <TextView
            android:id="@+id/average_response_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_line"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceBody1"
            app:averageAnswerSec="@{exam.result.averageAnswerSec}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_number_of_correct"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2.40秒" />

        <TextView
            android:id="@+id/exam_date"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_line"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/padding_m"
            android:paddingLeft="@dimen/padding_m"
            android:paddingEnd="@dimen/padding_m"
            android:paddingRight="@dimen/padding_m"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textSize="@dimen/text_xxs"
            app:examTime="@{exam.tookDate}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3日前" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black22"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
