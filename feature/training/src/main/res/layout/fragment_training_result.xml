<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.TrainingResultFragment">

    <data>

        <variable
            name="viewModel"
            type="me.rei_m.hyakuninisshu.feature.training.ui.TrainingResultViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tatami">

        <TextView
            android:id="@+id/text_training_score_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_m"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_m"
            android:background="@color/white99"
            android:gravity="start"
            android:padding="@dimen/padding_xs"
            android:text="@string/number_of_correct_answers"
            app:layout_constraintBottom_toTopOf="@id/text_training_score"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_training_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_m"
            android:background="@color/white99"
            android:gravity="center"
            android:text="@{viewModel.score}"
            android:textSize="@dimen/text_xl"
            app:layout_constraintBottom_toTopOf="@id/text_training_average_time_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_training_score_title"
            tools:text="10 / 100" />

        <TextView
            android:id="@+id/text_training_average_time_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_m"
            android:layout_marginTop="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_m"
            android:background="@color/white99"
            android:gravity="start"
            android:padding="@dimen/padding_xs"
            android:text="@string/average_response_time"
            app:layout_constraintBottom_toTopOf="@id/text_training_average_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_training_score" />

        <TextView
            android:id="@+id/text_training_average_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_m"
            android:layout_marginBottom="@dimen/margin_l"
            android:background="@color/white99"
            android:gravity="center"
            android:textSize="@dimen/text_xl"
            app:averageAnswerSec="@{viewModel.averageAnswerSec}"
            app:layout_constraintBottom_toTopOf="@id/button_restart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_training_average_time_title"
            tools:text="1.24ç§’" />

        <Button
            android:id="@+id/button_restart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_m"
            android:layout_marginBottom="@dimen/margin_m"
            android:onClick="@{() -> viewModel.onClickPracticeWrongKarutas()}"
            android:text="@string/practice_wrong_karutas"
            app:layout_constraintBottom_toTopOf="@id/button_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_training_average_time"
            app:visibleOrGone="@{viewModel.canRestartTraining}" />

        <Button
            android:id="@+id/button_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_m"
            android:layout_marginEnd="@dimen/margin_m"
            android:text="@string/back_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_restart" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
