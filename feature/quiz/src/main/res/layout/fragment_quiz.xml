<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.QuizFragment">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="me.rei_m.hyakuninisshu.feature.quiz.ui.QuizViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/tatami"
        android:theme="@style/AppTheme"
        app:visibleOrGone="@{viewModel.isVisibleContent}">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whiteSmoke"
            android:paddingStart="@dimen/padding_m"
            android:paddingTop="@dimen/padding_s"
            android:paddingEnd="@dimen/padding_m"
            android:paddingBottom="@dimen/padding_s"
            android:text="@{viewModel.quizCount}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1 / 100" />

        <RelativeLayout
            android:id="@+id/layout_quiz_phrase"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_m"
            android:background="@drawable/bg_karuta"
            android:elevation="@dimen/elevation_level_m"
            android:padding="@dimen/padding_s"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_karuta_inner">

                <RelativeLayout
                    android:id="@+id/phrase_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/phrase_2"
                    android:paddingTop="@dimen/padding_m"
                    android:paddingBottom="@dimen/padding_m">

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_s"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.firstPhrase}"
                        app:textPosition="@{1}"
                        app:textSizeByPx="@{viewModel.quizTextSize}"
                        tools:text="秋" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_1_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_1_1"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.firstPhrase}"
                        app:textPosition="@{2}"
                        app:textSizeByPx="@{viewModel.quizTextSize}"
                        tools:text="の" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_1_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_1_2"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.firstPhrase}"
                        app:textPosition="@{3}"
                        app:textSizeByPx="@{viewModel.quizTextSize}"
                        tools:text="田" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_1_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_1_3"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.firstPhrase}"
                        app:textPosition="@{4}"
                        app:textSizeByPx="@{viewModel.quizTextSize}"
                        tools:text="の" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_1_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_1_4"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.firstPhrase}"
                        app:textPosition="@{5}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_1_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_1_5"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.firstPhrase}"
                        app:textPosition="@{6}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/phrase_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="@dimen/margin_s"
                    android:layout_marginTop="@dimen/margin_ll"
                    android:layout_marginEnd="@dimen/margin_s"
                    android:paddingTop="@dimen/padding_m"
                    android:paddingBottom="@dimen/padding_m">

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.secondPhrase}"
                        app:textPosition="@{1}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_2_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_2_1"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.secondPhrase}"
                        app:textPosition="@{2}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_2_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_2_2"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.secondPhrase}"
                        app:textPosition="@{3}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_2_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_2_3"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.secondPhrase}"
                        app:textPosition="@{4}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_2_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_2_4"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.secondPhrase}"
                        app:textPosition="@{5}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_2_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_2_5"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.secondPhrase}"
                        app:textPosition="@{6}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_2_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_2_6"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.secondPhrase}"
                        app:textPosition="@{7}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_2_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_2_7"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.secondPhrase}"
                        app:textPosition="@{8}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xxl"
                    android:layout_toStartOf="@+id/phrase_2"
                    android:paddingTop="@dimen/padding_m"
                    android:paddingBottom="@dimen/padding_m">

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.thirdPhrase}"
                        app:textPosition="@{1}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_3_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_3_1"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.thirdPhrase}"
                        app:textPosition="@{2}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_3_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_3_2"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.thirdPhrase}"
                        app:textPosition="@{3}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_3_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_3_3"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.thirdPhrase}"
                        app:textPosition="@{4}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_3_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_3_4"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        app:textForQuiz="@{viewModel.thirdPhrase}"
                        app:textPosition="@{5}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                    <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.KarutaTextView
                        android:id="@+id/phrase_3_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phrase_3_5"
                        android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                        android:layout_marginBottom="@dimen/margin_karuta_text_bottom"
                        android:visibility="invisible"
                        app:textForQuiz="@{viewModel.thirdPhrase}"
                        app:textPosition="@{6}"
                        app:textSizeByPx="@{viewModel.quizTextSize}" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/layout_choice_1"
            style="@style/KarutaChoicePhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_m"
            android:elevation="@dimen/elevation_level_m"
            android:onClick="@{() -> viewModel.onClickChoice(1)}"
            android:padding="@dimen/padding_xs"
            android:visibility="@{viewModel.isVisibleChoiceList.get(0).booleanValue() ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_choice_2"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_quiz_phrase">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_karuta_inner"
                android:orientation="horizontal"
                android:padding="@dimen/padding_s">

                <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_l"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:verticalText="@{viewModel.choiceFifthPhraseList.get(0)}"
                    app:verticalTextSizeByPx="@{viewModel.choiceTextSize}" />

                <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xs"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:verticalText="@{viewModel.choiceFourthPhraseList.get(0)}"
                    app:verticalTextSizeByPx="@{viewModel.choiceTextSize}" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_choice_2"
            style="@style/KarutaChoicePhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_level_m"
            android:onClick="@{() -> viewModel.onClickChoice(2)}"
            android:padding="@dimen/padding_xs"
            android:visibility="@{viewModel.isVisibleChoiceList.get(1).booleanValue() ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_choice_3"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/layout_choice_1"
            app:layout_constraintTop_toBottomOf="@id/layout_quiz_phrase">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_karuta_inner"
                android:orientation="horizontal"
                android:padding="@dimen/padding_s">

                <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_l"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:verticalText="@{viewModel.choiceFifthPhraseList.get(1)}"
                    app:verticalTextSizeByPx="@{viewModel.choiceTextSize}" />

                <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xs"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:verticalText="@{viewModel.choiceFourthPhraseList.get(1)}"
                    app:verticalTextSizeByPx="@{viewModel.choiceTextSize}" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_choice_3"
            style="@style/KarutaChoicePhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_level_m"
            android:onClick="@{() -> viewModel.onClickChoice(3)}"
            android:padding="@dimen/padding_xs"
            android:visibility="@{viewModel.isVisibleChoiceList.get(2).booleanValue() ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/layout_choice_4"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/layout_choice_2"
            app:layout_constraintTop_toBottomOf="@id/layout_quiz_phrase">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_karuta_inner"
                android:orientation="horizontal"
                android:padding="@dimen/padding_s">

                <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_l"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:verticalText="@{viewModel.choiceFifthPhraseList.get(2)}"
                    app:verticalTextSizeByPx="@{viewModel.choiceTextSize}" />

                <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xs"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:verticalText="@{viewModel.choiceFourthPhraseList.get(2)}"
                    app:verticalTextSizeByPx="@{viewModel.choiceTextSize}" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_choice_4"
            style="@style/KarutaChoicePhrase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_m"
            android:elevation="@dimen/elevation_level_m"
            android:onClick="@{() -> viewModel.onClickChoice(4)}"
            android:padding="@dimen/padding_xs"
            android:visibility="@{viewModel.isVisibleChoiceList.get(3).booleanValue() ? View.VISIBLE : View.INVISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toEndOf="@id/layout_choice_3"
            app:layout_constraintTop_toBottomOf="@id/layout_quiz_phrase">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_karuta_inner"
                android:orientation="horizontal"
                android:padding="@dimen/padding_s">

                <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_l"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:verticalText="@{viewModel.choiceFifthPhraseList.get(3)}"
                    app:verticalTextSizeByPx="@{viewModel.choiceTextSize}" />

                <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_xs"
                    android:textAppearance="?attr/textAppearanceBody1"
                    app:verticalText="@{viewModel.choiceFourthPhraseList.get(3)}"
                    app:verticalTextSizeByPx="@{viewModel.choiceTextSize}" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_quiz_result"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="@dimen/elevation_level_m"
            android:onClick="@{() -> viewModel.onClickResult()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:visibleOrGone="@{viewModel.isVisibleResult}"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/image_quiz_result"
                android:layout_width="@dimen/size_karuta_quiz_result_mark"
                android:layout_height="@dimen/size_karuta_quiz_result_mark"
                android:layout_gravity="center"
                android:contentDescription="@string/score"
                app:isCorrect="@{viewModel.isCorrect}"
                app:visibleOrGone="@{viewModel.isVisibleResult}" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
