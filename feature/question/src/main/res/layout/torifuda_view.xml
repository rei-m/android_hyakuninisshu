<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/root_torifuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fuda_inner"
        android:orientation="horizontal"
        android:paddingStart="@dimen/spacing_1"
        android:paddingTop="@dimen/spacing_0_5"
        android:paddingEnd="@dimen/spacing_1"
        android:paddingBottom="@dimen/spacing_0_5">

        <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
            android:id="@+id/text_torifuda_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_3"
            android:textAppearance="?attr/textAppearanceBody1" />

        <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
            android:id="@+id/text_torifuda_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_0_25"
            android:textAppearance="?attr/textAppearanceBody1" />
    </LinearLayout>
</merge>
