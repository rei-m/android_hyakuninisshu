<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/root_fuda_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fuda_inner"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingStart="@dimen/spacing_2"
        android:paddingTop="@dimen/spacing_5"
        android:paddingEnd="@dimen/spacing_2"
        android:paddingBottom="@dimen/spacing_5">

        <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
            android:id="@+id/text_fuda_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/spacing_1"
            android:textAppearance="?attr/textAppearanceBody2" />

        <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
            android:id="@+id/text_fuda_goku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_5" />

        <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
            android:id="@+id/text_fuda_shiku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_1"
            android:layout_marginTop="@dimen/spacing_2" />

        <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
            android:id="@+id/text_fuda_sanku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_1"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginEnd="@dimen/spacing_1" />

        <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
            android:id="@+id/text_fuda_niku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_3"
            android:layout_marginEnd="@dimen/spacing_1" />

        <me.rei_m.hyakuninisshu.feature.corecomponent.widget.view.VerticalSingleLineTextView
            android:id="@+id/text_fuda_shoku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</merge>
