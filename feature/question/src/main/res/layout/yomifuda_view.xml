                app:position="7" />

            <me.rei_m.hyakuninisshu.feature.question.ui.widget.YomiFudaWordView
                android:id="@+id/phrase_2_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phrase_2_7"
                android:layout_marginTop="@dimen/margin_karuta_word_adjust"
                android:layout_marginBottom="@dimen/spacing_1"
                app:position="8" />

        </RelativeLayout>

        <RelativeLayout
