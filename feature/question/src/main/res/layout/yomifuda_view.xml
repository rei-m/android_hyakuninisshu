            <!--            app:textForQuiz="@{viewModel.thirdPhrase}"-->
            <!--            app:textPosition="@{1}"-->
            <!--            app:textSizeByPx="@{viewModel.quizTextSize}"-->

            <me.rei_m.hyakuninisshu.feature.question.ui.widget.YomiFudaWordView
