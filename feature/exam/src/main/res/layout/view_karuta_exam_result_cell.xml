<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/text_karuta_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
        tools:text="一番"
        />

    <ImageView
        android:id="@+id/image_quiz_result_correct"
        android:layout_width="@dimen/size_karuta_exam_result_mark"
        android:layout_height="@dimen/size_karuta_exam_result_mark"
        android:layout_centerInParent="true"
        android:contentDescription="@string/correct"
        android:visibility="gone"
        app:srcCompat="@drawable/check_correct" />

    <ImageView
        android:id="@+id/image_quiz_result_incorrect"
        android:layout_width="@dimen/size_karuta_exam_result_mark"
        android:layout_height="@dimen/size_karuta_exam_result_mark"
        android:layout_centerInParent="true"
        android:contentDescription="@string/incorrect"
        android:visibility="gone"
        app:srcCompat="@drawable/check_incorrect" />

</RelativeLayout>
