<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.ExamResultFragment">

    <data>

        <variable
            name="viewModel"
            type="me.rei_m.hyakuninisshu.feature.exam.ui.ExamResultViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/AppTheme">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tatami"
            android:paddingBottom="@dimen/height_ad_banner">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_m"
                app:cardBackgroundColor="#f6fff8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_training_score_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_xs"
                        android:paddingStart="@dimen/padding_m"
                        android:paddingTop="@dimen/padding_m"
                        android:paddingEnd="@dimen/padding_m"
                        android:text="@string/number_of_correct_answers"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_training_score"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_s"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_m"
                        android:paddingEnd="@dimen/padding_m"
                        android:text="@{viewModel.score}"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textSize="@dimen/text_xl"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_training_score_title"
                        tools:text="10 / 100" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_average_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_m"
                app:cardBackgroundColor="#f6fff8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_score">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_training_average_time_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_xs"
                        android:paddingStart="@dimen/padding_m"
                        android:paddingTop="@dimen/padding_m"
                        android:paddingEnd="@dimen/padding_m"
                        android:text="@string/average_response_time"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_training_average_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_s"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_m"
                        android:paddingEnd="@dimen/padding_m"
                        android:text="@{viewModel.score}"
                        android:textAppearance="?attr/textAppearanceBody1"
                        android:textSize="@dimen/text_xl"
                        app:averageAnswerSec="@{viewModel.averageAnswerSec}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_training_average_time_title"
                        tools:text="1.24ç§’" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_exam_result"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_m"
                app:cardBackgroundColor="#f6fff8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_average_time">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_exam_result_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_xs"
                        android:paddingStart="@dimen/padding_m"
                        android:paddingTop="@dimen/padding_m"
                        android:paddingEnd="@dimen/padding_m"
                        android:text="@string/result_answer"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/text_exam_result_explain"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_xs"
                        android:paddingTop="@dimen/padding_s"
                        android:text="@string/explain_result"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textSize="@dimen/text_xs"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_exam_result_title" />

                    <me.rei_m.hyakuninisshu.feature.exam.ui.widget.KarutaExamResultView
                        android:id="@+id/view_result"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_m"
                        android:layout_marginEnd="@dimen/margin_m"
                        android:layout_marginBottom="@dimen/margin_l"
                        android:background="@color/white99"
                        android:paddingTop="@dimen/padding_s"
                        android:paddingBottom="@dimen/padding_s"
                        app:examJudgements="@{viewModel.karutaQuizJudgements}"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/text_exam_result_explain" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_back"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_m"
                android:layout_marginEnd="@dimen/margin_m"
                android:backgroundTint="#e0e0e0"
                android:paddingLeft="@dimen/padding_m"
                android:paddingRight="@dimen/padding_m"
                android:text="@string/back_menu"
                android:textColor="@android:color/primary_text_light"
                app:icon="@drawable/ic_arrow_back_black_24dp"
                app:iconGravity="textStart"
                app:iconTint="@android:color/primary_text_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_exam_result" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>
