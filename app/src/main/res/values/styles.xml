<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KarutaChoicePhrase">
        <item name="android:background">@drawable/bg_karuta_choice</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">@dimen/padding_m</item>
        <item name="android:paddingTop">@dimen/padding_m</item>
    </style>

    <style name="AccentButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_ml</item>
        <item name="android:paddingBottom">@dimen/padding_s</item>
        <item name="android:paddingLeft">@dimen/padding_m</item>
        <item name="android:paddingRight">@dimen/padding_m</item>
        <item name="android:paddingTop">@dimen/padding_s</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
