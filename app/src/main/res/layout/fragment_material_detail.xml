<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.karuta.widget.fragment.MaterialDetailFragment">

    <data>

        <variable
            name="viewModel"
            type="me.rei_m.hyakuninisshu.presentation.karuta.viewmodel.MaterialDetailViewModel" />

        <variable
            name="presenter"
            type="me.rei_m.hyakuninisshu.presentation.karuta.widget.fragment.MaterialDetailContact.Actions" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/width_karuta_thumbnail_small"
            android:layout_height="@dimen/height_karuta_thumbnail_small"
            android:layout_marginEnd="@dimen/margin_m"
            android:layout_marginStart="0dp"
            android:contentDescription="@string/karuta"
            app:karutaSrc="@{viewModel.karutaImageNo}" />

    </RelativeLayout>

</layout>
