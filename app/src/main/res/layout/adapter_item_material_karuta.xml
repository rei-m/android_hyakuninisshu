<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View.OnClickListener" />

        <variable
            name="karuta"
            type="me.rei_m.hyakuninisshu.domain.model.karuta.Karuta" />

        <variable
            name="position"
            type="int" />

        <variable
            name="listener"
            type="me.rei_m.hyakuninisshu.presentation.entrance.MaterialListAdapter.OnItemInteractionListener" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple"
        android:onClick="@{() -> listener.onItemClicked(position)}"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_xs"
        android:paddingLeft="@dimen/padding_m"
        android:paddingRight="@dimen/padding_m"
        android:paddingTop="@dimen/padding_xs">

        <TextView
            android:layout_width="@dimen/width_karuta_thumbnail_small"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xxs"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_xxs"
            app:karutaNo="@{karuta.identifier().value}" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/width_karuta_thumbnail_small"
                android:layout_height="@dimen/height_karuta_thumbnail_small"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/margin_m"
                android:layout_marginStart="0dp"
                android:contentDescription="@string/karuta"
                app:karutaSrc="@{karuta.imageNo.value}" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{karuta.kamiNoKu.kanji}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{karuta.shimoNoKu.kanji}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="@{karuta.creator}" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>
