<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".presentation.karuta.widget.fragment.ExamResultFragment">

    <data>

        <variable
            name="viewModel"
            type="me.rei_m.hyakuninisshu.viewmodel.karuta.widget.fragment.ExamResultFragmentViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tatami"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_m"
                android:background="@color/white99"
                android:gravity="start"
                android:padding="@dimen/padding_xs"
                android:text="@string/number_of_correct_answers" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginStart="@dimen/margin_m"
                android:background="@color/white99"
                android:gravity="center"
                android:text="@{viewModel.score}"
                android:textSize="@dimen/text_xl" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_m"
                android:background="@color/white99"
                android:gravity="start"
                android:padding="@dimen/padding_xs"
                android:text="@string/average_response_time" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginStart="@dimen/margin_m"
                android:background="@color/white99"
                android:gravity="center"
                android:textSize="@dimen/text_xl"
                app:averageAnswerSec="@{viewModel.averageAnswerSec}" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginStart="@dimen/margin_m"
                android:layout_marginTop="@dimen/margin_m"
                android:background="@color/white99"
                android:gravity="start"
                android:padding="@dimen/padding_xs"
                android:text="@string/result_answer" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginStart="@dimen/margin_m"
                android:background="@color/white99"
                android:gravity="start"
                android:padding="@dimen/padding_xs"
                android:paddingTop="@dimen/padding_s"
                android:text="@string/explain_result"
                android:textSize="@dimen/text_xs" />

            <me.rei_m.hyakuninisshu.presentation.karuta.widget.view.KarutaExamResultView
                android:id="@+id/view_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_l"
                android:layout_marginEnd="@dimen/margin_m"
                android:layout_marginStart="@dimen/margin_m"
                android:background="@color/white99"
                android:paddingBottom="@dimen/padding_s"
                android:paddingTop="@dimen/padding_s"
                app:examJudgements="@{viewModel.karutaQuizJudgements}" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_l"
                android:onClick="@{viewModel::onClickBackMenu}"
                android:text="@string/back_menu" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_ad_banner" />

        </LinearLayout>

    </ScrollView>

</layout>
