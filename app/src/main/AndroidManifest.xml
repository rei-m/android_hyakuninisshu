<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.rei_m.hyakuninisshu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <!-- This meta-data tag is required to use Google Play Services. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_mob_app_id" />

        <meta-data
            android:name="firebase_crashlytics_collection_enabled"
            android:value="${crashlyticsEnabled}" />

        <activity
            android:name=".presentation.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.entrance.EntranceActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.training.TrainingActivity"
            android:label="@string/function_training"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.exam.ExamActivity"
            android:label="@string/function_exam"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.training.TrainingExamActivity"
            android:label="@string/function_training"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".feature.materialdetail.ui.MaterialDetailActivity"
            android:label="@string/function_material"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.karuta.KarutaActivity"
            android:label="@string/function_material"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".feature.materialedit.ui.MaterialEditActivity"
            android:label="@string/editing_material"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.examhistory.ExamHistoryActivity"
            android:label="@string/exam_history"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>